.main{
    padding 30px;
}

.content{
    width 790px;
    padding-top 30px;
}

.textareaBox{
    margin-bottom 30px;

    /deep/ .el-textarea__inner{
        resize none;
        border none;
        outline none;
        margin-bottom 30px;
    }
}

.textarea{
    border: 1px solid #ccc;
    border-radius 5px;
}

/deep/ .el-form-item__content{
    position relative;
}

.textNum{
    position absolute;
    height 20px;
    line-height 20px;
    right 10px;
    bottom 8px;
    color:#999;
}

.btn_box{
        width:780px;
        text-align center;

        .disabled{
            background-color:#96ecc1 !important;
        }
    }

    .btn_box .btn{
        display: inline-block;
        width 160px;
        height:35px;
        line-height 35px;
        text-align center;
        color #fff;
        border-radius 4px;
        background-color:#24b36b;
        cursor pointer;
    }

.copy{
                
    &-list{
        overflow hidden
        background-color:#f5f5f5;
        line-height: 20px;

        .profileImg{
            height: 50px;
            width: 50px;
            border-radius: 50%;
            position: relative;
            margin-right: 20px;
            margin 0
            top 0
        }
    }

    &-list-item{
        width 80px;
        height 80px;
        text-align center
        float left
        margin-top 15px;
    }

}

.file-item{
    display flex;
    justify-content:space-between; 
    background-color #f5f5f5;
    padding 15px;
    line-height 20px;
    margin 10px 0;

    span{
        color:#999;
    }

    img{
        width:40px;
        height:40px;
        margin-right:15px;
    }

    .item-content{
        display:flex;
        align-items:center;
    }
}
